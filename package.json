  "scripts": {
    "ng": "ng",
    "start": "ng serve -o --port=4914",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "test:base": "ng test --include=src/app/services/base.store.spec.ts",
    "api": "json-server-auth ./database/db.json -r ./database/routes.json",
    "e2e": "ng e2e",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "http": "npx http-server -o -p 8200 -c-1 dist/angulab",
    "ci": "concurrently \"npm:http\" \"npm:api\" \"npm:cypress:run\""
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^14.2.0",
