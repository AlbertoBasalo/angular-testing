    "eslint-plugin-prettier": "^4.2.1",
    "http-server": "^14.1.1",
    "jasmine-core": "~4.3.0",
    "json-server": "^0.17.1",
    "json-server-auth": "^2.1.0",
    "karma": "~6.4.0",
